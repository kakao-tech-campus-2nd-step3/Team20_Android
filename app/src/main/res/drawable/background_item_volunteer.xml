<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 정의 -->
    <solid android:color="#ffffff" />

    <!-- 모서리를 둥글게 설정 -->
    <corners android:radius="16dp" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="#8000FF" />

    <!-- 패딩 설정 -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />



</shape>
