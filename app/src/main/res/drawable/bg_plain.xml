<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 정의 -->
    <solid android:color="@color/base_beige_1" />

    <!-- 모서리를 둥글게 설정 -->
    <corners android:radius="15dp" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="@color/point_brown_2" />

    <!-- 패딩 설정 -->
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" />


</shape>
